<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="15dp"

    android:background="@drawable/back">


    <ImageView
        android:id="@+id/imageViewmain2"
        android:layout_width="356dp"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="269dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/txtplacemain2"
        android:layout_width="168dp"
        android:layout_height="51dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="210dp"
        android:text="Name"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtfeesmain2"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="50dp"
        android:text=""
android:drawableLeft="@drawable/ic_baseline_currency_rupee"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtnumperson"
        android:layout_width="wrap_content"

        android:layout_height="54dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="330dp"
        android:layout_marginBottom="50dp"
        android:text="*Maximum 4 person"
        android:textColor="#838282"
        android:textSize="20dp"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/ic_baseline_place_24" />
</androidx.cardview.widget.CardView>