<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".placedetails"
    android:background="@drawable/back">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/placeimg"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.027"
            tools:srcCompat="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addname"
        android:layout_width="447dp"
        android:layout_height="35dp"

        android:layout_below="@+id/placeimg"
        android:text=" "
        android:layout_marginTop="20dp"
android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView4"
        android:layout_width="669dp"
        android:layout_height="34dp"
        android:background="@drawable/actiedit"
        android:text="  Packages includes:"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_below="@id/adddes"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView6"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginTop="20dp"
            android:background="@drawable/actiedit"
            android:text="  Activities included:"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />
        <TextView
            android:id="@+id/adddes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addname"
            android:layout_marginTop="20dp"
            android:text=""
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/addmeals"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginTop="16dp"
            android:lines="4"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.723" />

        <TextView
            android:id="@+id/addinstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addmeals"
            android:layout_marginTop="16dp"
            android:lines="6"
            android:text="   Note:\n 1.Travel facilities from selected destination\n 2.Only three meals included\n 3.Do not do any damage to the property\n 4.Check in 11am            Check out 10pm"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.723" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView5"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/addactivities"
            android:layout_marginTop="20dp"
            android:background="@drawable/actiedit"
            android:text="  Meals included:"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <TextView
            android:id="@+id/addactivities"
            android:layout_width="348dp"
            android:layout_height="125dp"
            android:layout_below="@id/textView4"
            android:layout_marginTop="75dp"
            android:lines="4"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.723" />

        <TextView
            android:id="@+id/adddata"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addinstruction"
            android:layout_marginTop="15dp"
            android:text="Enter your data to proceed:"
            android:textColor="#151414"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.202"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04" />

        <EditText
            android:id="@+id/adduname"
            android:layout_width="333dp"
            android:layout_height="43dp"
            android:ems="10"
            android:layout_below="@+id/adddata"
            android:hint="Enter your mail"
            android:inputType="textPersonName"
            android:text=""
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.149" />


        <EditText
            android:id="@+id/addcmble"
            android:layout_width="333dp"
            android:layout_height="43dp"
            android:layout_below="@+id/adduname"
            android:layout_marginTop="38dp"
            android:ems="10"
            android:hint="Mobile no"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.016" />

        <EditText
            android:id="@+id/cdateformat"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addcmble"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:hint="select the date"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
        android:id="@+id/addamount"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:text="  "
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/cdateformat"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"


        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.983" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/book"
            android:layout_width="150dp"
            android:layout_height="49dp"
            android:layout_below="@+id/addamount"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="-47dp"
            android:background="@drawable/booknow"
            android:text="Book now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976" />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>