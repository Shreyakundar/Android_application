<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".placedetails"
    android:background="@drawable/back">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/placeimgadmin"
                android:layout_width="413dp"
                android:layout_height="154dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.027"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/addnameadmin"
                android:layout_width="447dp"
                android:layout_height="35dp"

                android:layout_below="@+id/placeimgadmin"
                android:text=""
                android:layout_marginTop="20dp"

                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.275" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView4admin"
                android:layout_width="669dp"
                android:layout_height="34dp"
                android:background="@drawable/actiedit"
                android:text="  Packages includes:"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_below="@id/adddesadmin"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.096"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView6admin"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4admin"
                android:layout_marginTop="20dp"
                android:background="@drawable/actiedit"
                android:text="  Activities included:"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.096"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />
            <TextView
                android:id="@+id/adddesadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addnameadmin"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <TextView
                android:id="@+id/addmealsadmin"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:lines="4"
                android:text=""
                android:layout_below="@id/textView5admin"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.723" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView5admin"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/addactivitiesadmin"
                android:layout_marginTop="20dp"
                android:background="@drawable/actiedit"
                android:text="  Meals included:"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.096"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />

            <TextView
                android:id="@+id/addactivitiesadmin"
                android:layout_width="348dp"
                android:layout_height="125dp"
                android:layout_below="@id/textView4admin"
                android:layout_marginTop="75dp"
                android:lines="4"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.723" />

            <TextView
                android:id="@+id/addamountadmin"
                android:layout_width="138dp"
                android:layout_height="42dp"
                android:layout_below="@+id/addmealsadmin"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/edit_layout"
                android:drawableLeft="@drawable/ic_baseline_currency_rupee"
                android:text=" "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textStyle="bold"


                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.983" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>